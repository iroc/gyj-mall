  <script>
  // 点击提交表单
  $('.submit').on('click', function() {
    var _this = $(this);

    //
    if (_this.hasClass('disabled')) {
      return;
    }

    // 追加了一个禁用的类
    _this.addClass('disabled');

    // 将表单数据序列化处理key=val&key=val
    var formData = $('#ajaxForm').serialize();
    console.log(formData);
    $.ajax({
      url: 'register.php',
      type: 'post',
      data: formData,
      beforeSend: function() {
        // ajax请求前调用，常用来做验证处理
        var name = $('.name').val();

        if (name == '') {
          $('.tips p')
            .text('用户名不能为空')
            .fadeIn(500)
            .delay(1500)
            .fadeOut(500);

          // 终止请求发出
          return false;
        }

        // 忽略了其它的验证，自行完成

        // 验证通过了后处理
        _this.val('正在提交...');

      },
      success: function(data) {
        console.log(data);
      },
      error: function() {
        //
      },
      complete: function() {
        // ajax请求完成的时候调用
        _this.val('立即注册');
        _this.removeClass('disabled');
      }
    });
  });

  // 发送验证码
  $('.verify').on('click', function() {
    var _this = $(this);

    if (_this.hasClass('disabled')) {
      return;
    }

    var mobile = $('.mobile').val();

    $.ajax({
      url: 'getCode.php',
      type: 'post',
      data: {
        mobile: mobile
      },
      beforeSend: function() {
        var regMobile = /1\d{10}/;

        // 验证
        if (!regMobile.test(mobile)) {
          $('.tips p')
            .text('手机号码不正码')
            .fadeIn(500)
            .delay(1500)
            .fadeOut(500);

          // 终止请求
          return false;
        }

        var seconds = 10;

        _this.addClass('disabled');

        var t = setInterval(function() {
          if (seconds <= 1) {
            clearInterval(t);
            _this.removeClass('disabled');

            _this.val('获取验证码');
            return;
          }
          _this.val(--seconds + '秒后再次获取');


        }, 500);
      },
      success: function(data) {
        alert('验证码已发送，请查收');
      },
      error: function() {},
      complete: function() {}
    });
  });

  // 快捷方式
  $('input').click(function() {});

  // 可以详细配置
