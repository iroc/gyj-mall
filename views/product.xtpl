  .fullImg {
    width: 300px;
    vertical-align: top;
  }
  
  .prodInfo {
    display: inline-block;
  }
  
  .p-title {
    line-height: 1.5em;
    overflow: hidden;
    font-weight: 700;
    font-family: arial, "microsoft yahei";
    font-size: 16px;
  }
  
  .p-price {
    color: #e4393c;
    font-size: 20px;
    margin-top: 60px;
  }
  
  .p-add {
    margin-top: 130px;
  }
  </style>
</head>

<body>
  <!--site-nav部分开始-->
  <div class="site-nav">
    <div class="w">
