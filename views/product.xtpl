  <!--产品展示部分开始-->
  <div class="w">
    <div class="prod-container">
      <img class="fullImg" src="{{prod.imagefile}}" alt="">
      <div class="prodInfo">
        <p class="p-title">{{prod.name}}</p>
        <p class="p-price">
          价格：<strong>￥{{prod.price}}</strong>
        </p>
        <p class="p-add">
          <a href="/cart/add?pid={{prod.id}}">
